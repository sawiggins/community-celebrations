<%= form_with model: @card do |form| %>
  <div>
    <%= form.label :title, :class => 'form-label' %><br>
    <%= form.text_field :title, :class => 'form-input' %>
    <% @card.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description, :class => 'form-label mt-2' %><br>
    <%= form.text_area :description, :class => 'form-input' %>
    <% @card.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit "Submit", :class => 'btn mt-4' %>
  </div>
<% end %>
